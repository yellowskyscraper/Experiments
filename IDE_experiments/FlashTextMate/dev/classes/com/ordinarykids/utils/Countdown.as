'+$s;            return $s;        }         //- PUBLIC GETTERS ----------------------------------------------------------------------                public function get days():String		{          return time.days;        }                public function get hours():String		{          return time.hours;        }                public function get minutes():String		{          return time.minutes;        }                public function get seconds():String		{          return time.seconds;        }                public function get millis():String		{          return time.millis;        }        			}	}