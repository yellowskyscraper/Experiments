package nike {		import com.ordinarykids.net.*;	import com.ordinarykids.core.BaseDocument;	import com.ordinarykids.events.XMLRequestEvent;							import nike.view.View;			import nike.model.Model; 			import nike.events.AppEvent;	import nike.utils.SoundManager;				public class ApplicationMain extends BaseDocument	{				private static var _view	:View;				private static var _model	:Model;							public function ApplicationMain ()		{							addEventListener(XMLRequestEvent.COMPLETE, onXMLConfigLoaded);		}				private function onXMLConfigLoaded(evt:XMLRequestEvent):void		{			Model.colorways = config.colorways.color;					// pass the root path to the site's assets into the load managers //				HTTPRequest.ROOT_PATH = config.@root;			SoundManager.ROOT_PATH = config.@root;			DisplayObjectRequest.ROOT_PATH = config.@root;								// init the model with loaded xml files //				_model = new Model(config['xml'].file);			_model.addEventListener(AppEvent.XML_READY, onXMLReady);		}				private function onXMLReady(evt:AppEvent):void		{			_view  = new View();			this.addChild(_view);		}			}}