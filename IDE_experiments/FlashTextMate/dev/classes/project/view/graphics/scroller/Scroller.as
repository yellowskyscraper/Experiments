package project.view.graphics.scroller {		import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;		import project.events.AppEvent;	import project.view.graphics.text.TitleSecondaryText;	import project.view.graphics.text.ParagraphText;	import project.view.graphics.miscellaneous.NameTitleMark;	import project.view.graphics.miscellaneous.BulletText;		import gs.TweenLite;	import gs.OverwriteManager;    import gs.easing.Quart;    import gs.easing.Expo;////////////////////////////////////////////////////////////////////////////////////////////////////////////|////////////////////////////////////////////////////////////////////////////////////////////////////////////|////////////////////////////////////////////////////////////////////////////////////////////////////////////|////////////////////////////////////////////////////////////////////////////////////////////////////////////|//| Scroller Build	public class Scroller extends ScrollBase {        private var _ypos:int = 0;                private var _fontcolor:uint;////////////////////////////////////////////////////////////////////////////////////////////////////////////|//| SCROLL SIMPLE		public function Scroller($xml:XML, $gui:Object = null)		{		//| Temp place for grphic user interface values		    super($gui);		    		    if($gui.theme == "BLACK") _fontcolor = 0xFFFFFF;		//| Bundle Of Nodes            var a:int = $xml.nodes.length();    	    for(var i:int = 0; i < a; i++){                        //| Node Of Information                var node:Sprite = new Sprite();                var yPosition:Number = 0;                        //| Loop Through Node Information            //| Sort according to Info Type                    var b:int = $xml.nodes[i].node.length();                for(var j:int = 0; j < b; j++){                    var nType:String = $xml.nodes[i].node[j].@type.toString();                    var nText:String = $xml.nodes[i].node[j].toString();        		    switch(nType){                        case "title":                        var titleNode:TitleSecondaryText = new TitleSecondaryText({text:nText, w:super._masterWidth, uppercase:true, fontcolor:_fontcolor});                        titleNode.y = Math.round(yPosition);                        yPosition += titleNode.height + 5;                        node.addChild(titleNode);        	            break;        	                                    case "date":                        //var dateNode:TitleSecondaryText = new TitleSecondaryText({text:nText, w:super._masterWidth, fontcolor:_fontcolor});                        //dateNode.y = yPosition;                        //yPosition += dateNode.height;                        //node.addChild(dateNode);        	            break;                            	            case "paragraph":        	            var bodyNode:ParagraphText = new ParagraphText({text:nText, w:super._masterWidth, fontcolor:_fontcolor});                        bodyNode.y = Math.round(yPosition);                        yPosition += bodyNode.height + 15;                        node.addChild(bodyNode)        	            break;                            	            case "bullet":        	            var bullettext:BulletText = new BulletText({name:nText, w:super._masterWidth, fontcolor:_fontcolor});        	            bullettext.y = Math.round(yPosition);        	            yPosition += bullettext.height + 10;                        node.addChild(bullettext);        	            break;                            	            case "name and title":                        var nName:String = $xml.nodes[i].node[j].@name.toString();        	            var nameTitleNode:NameTitleMark = new NameTitleMark({name:nName, position:nText, w:super._masterWidth, fontcolor:_fontcolor});    	                nameTitleNode.x = 10;                        nameTitleNode.y = Math.round(yPosition);                        nameTitleNode.buttonMode = true;            		    nameTitleNode.useHandCursor = true;            		    nameTitleNode.mouseChildren = false;                        nameTitleNode.addEventListener(MouseEvent.CLICK, nameBulletClicked);                        yPosition += nameTitleNode.height + 10;                        node.addChild(nameTitleNode)        	            break;    	            }                    }                        //| Add Node To Array and Scroller Container                  super._textNodeArray.push(node);                super._textNodeContainer.addChild(node);            }		//|	After Text Nodes Are Added to Container		//| Init Scroller Build			scrollInit();		} 		        private function nameBulletClicked(e:MouseEvent):void        {            dispatchEvent(new AppEvent(AppEvent.NAME_BULLET_CLICKED, {name:e.target.getName}));        }    ////////////////////////////////////////////////////////////////////////////////////////////////////////////|  		}}