package project.utils {		import flash.events.Event;	import flash.events.EventDispatcher;	import flash.external.ExternalInterface;		import com.asual.swfaddress.*;    import com.ordinarykids.utils.StringUtils;////////////////////////////////////////////////////////////////////////////////////////////////////////////|////////////////////////////////////////////////////////////////////////////////////////////////////////////|////////////////////////////////////////////////////////////////////////////////////////////////////////////|////////////////////////////////////////////////////////////////////////////////////////////////////////////| //|	Deep Link Controller		public class DeepLinkController extends EventDispatcher {					private static var _home		:String; //| default site name to display in title bar 		private static var _path		:String; //| address bar value  ////////////////////////////////////////////////////////////////////////////////////////////////////////////| 						public function DeepLinkController()		{			_home = SWFAddress.getTitle();		    SWFAddress.addEventListener(SWFAddressEvent.CHANGE, handleSWFAddressChange);		}////////////////////////////////////////////////////////////////////////////////////////////////////////////|////////////////////////////////////////////////////////////////////////////////////////////////////////////| //| PUBLIC SETTERS				public function set path($path:Array):void		{			var str:String = $path.join('/');				_path = StringUtils.formatToURL(str);					//| format address and title bar				SWFAddress.setValue(_path);					    SWFAddress.setTitle(_home + ' • ' + StringUtils.toTitleCase(str));			}						public function get path():Array		{			return SWFAddress.getValue().substr(1).split('/');		}////////////////////////////////////////////////////////////////////////////////////////////////////////////|////////////////////////////////////////////////////////////////////////////////////////////////////////////| //| SWF ADDRESS			          private function handleSWFAddressChange(e:SWFAddressEvent):void        {        //| this is always called immediately when the page loads		//| tell main app the address bar has changed			if (SWFAddress.getValue().substr(1) != _path){			    _path = SWFAddress.getValue();			    dispatchEvent(new Event(Event.CHANGE));			}						        }////////////////////////////////////////////////////////////////////////////////////////////////////////////| 			}	}